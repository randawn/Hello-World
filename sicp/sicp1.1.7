(define presice 0.1)

(define (aver x y)
  (/ (+ x y) 2))

(define (quot x y)
  (/ x y))

(define (abs x)
  (if (> x 0)
      x
      (- 0 x)))

(define (sqrt x)
  (* x x))

(define (distant x y)
  (abs (- x y)))

(define (bingo x y)
  (if (< (distant x (sqrt y)) presice)
      true
      false))

(define (refine x guess)
  (aver guess (quot x guess)))

(define (sqrtr-iter x guess)
  (if (bingo x guess)
      guess
      (sqrtr-iter x (refine x guess))))

(define (sqrtr x)
  (sqrtr-iter x 1.0))

